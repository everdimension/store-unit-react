{
  "name": "@store-unit/react",
  "version": "1.0.4",
  "description": "A React integration for store-unit, a watchable data unit for UIs",
  "type": "module",
  "source": "src/index.ts",
  "main": "lib/index.cjs",
  "exports": {
    "types": "./lib/index.d.ts",
    "require": "./lib/index.cjs",
    "default": "./lib/index.modern.js"
  },
  "module": "./lib/index.module.js",
  "unpkg": "./lib/index.umd.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "microbundle",
    "prepare": "npm run build",
    "pretest": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "posttest": "npm run format",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/everdimension/store-unit-react.git"
  },
  "keywords": [
    "hooks",
    "store-unit",
    "react"
  ],
  "author": "everdimension <everdimension@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/everdimension/store-unit-react/issues"
  },
  "homepage": "https://github.com/everdimension/store-unit-react#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "store-unit": ">=1.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.0.24",
    "microbundle": "^0.15.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "store-unit": "^1.0.3-1",
    "typescript": "^4.8.4"
  }
}
